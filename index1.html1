<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>图片格式转换</title>
    <style>
        /* Your CSS styles here */
    </style>
</head>
<body>
    <h1>图片格式转换</h1>
    <div class="container">
        <div class="input-group">
            <label for="file">选择图片：</label>
            <input type="file" id="file" accept="image/*">
        </div>
        <div class="input-group">
            <label for="format">转换格式：</label>
            <select id="format">
                <option value="jpg">JPG</option>
                <option value="png">PNG</option>
                <option value="webp">WEBP</option>
                <option value="tiff">TIFF</option>
                <option value="bmp">BMP</option>
                <option value="gif">GIF</option>
            </select>
        </div>
        <button id="convertButton">转换图片</button>
    </div>
    <div class="result" id="result"></div>

    <script type="module">
        import Vips from './vips-es6.js';

        async function initializeVips() {
            try {
                console.log('正在初始化 VIPS...');
                const vips = await Vips({
                    wasmModuleUrl: './vips.wasm'  // Ensure the correct path
                });
                console.log('VIPS 初始化成功');
                return vips;
            } catch (error) {
                console.error('VIPS 初始化失败', error);
            }
        }

        document.getElementById('convertButton').addEventListener('click', async () => {
            console.log('转换按钮被点击');
            const fileInput = document.getElementById('file');
            const format = document.getElementById('format').value;

            if (fileInput.files.length === 0) {
                alert('请先选择一张图片');
                return;
            }

            const file = fileInput.files[0];
            const reader = new FileReader();
            reader.onload = async function(e) {
                console.log('文件读取成功');
                const arrayBuffer = e.target.result;

                const vips = await initializeVips();

                let image;
                try {
                    image = vips.Image.newFromBuffer(new Uint8Array(arrayBuffer));
                    console.log('图像加载成功');
                } catch (error) {
                    console.error('图像加载失败', error);
                    return;
                }

                try {
                    const buffer = image.writeToBuffer(`.${format}`);
                    const blob = new Blob([buffer], { type: `image/${format}` });
                    const url = URL.createObjectURL(blob);
                    document.getElementById('result').innerHTML = `<img src="${url}" alt="转换后的图片">`;
                    console.log('图像转换成功并展示');
                } catch (error) {
                    console.error('图像转换失败', error);
                }
            };
            reader.readAsArrayBuffer(file);
        });
    </script>
</body>
</html>
